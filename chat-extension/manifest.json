{
  "manifest_version": 3,
  "name": "Chat Assistant",
  "version": "1.0.0",
  "description": "AI Chat Widget",
  "permissions": ["activeTab"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}