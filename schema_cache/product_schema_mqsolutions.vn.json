{
  "name": "Product Article Details",
  "baseSelector": "//article[contains(@class, 'blog-post')]",
  "fields": [
    {
      "name": "title",
      "selector": ".//h3[@class='entry-title']",
      "type": "text"
    },
    {
      "name": "image_url",
      "selector": ".//div[@class='entry-media']//img",
      "type": "attribute",
      "attribute": "data-src"
    },
    {
      "name": "description",
      "selector": ".//div[@class='entry-summary']",
      "type": "text"
    }
  ]
}