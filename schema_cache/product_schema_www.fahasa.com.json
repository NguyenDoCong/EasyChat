{
  "name": "Fahasa Product Detail",
  "baseSelector": "//div[@id='product_view_kasitoo']",
  "fields": [
    {
      "name": "title",
      "selector": ".//h1[@class='fhs_name_product_desktop']",
      "type": "text"
    },
    {
      "name": "price",
      "selector": ".//p[@class='special-price']//span[@class='price']",
      "type": "text"
    },
    {
      "name": "image_url",
      "selector": ".//img[@id='image' and contains(@class, 'fhs-p-img')]",
      "type": "attribute",
      "attribute": "data-src"
    },
    {
      "name": "description",
      "selector": ".//div[@id='desc_content']",
      "type": "text"
    }
  ]
}